{
  "name": "mern-chat-app",
  "version": "1.0.0",
  "description": "Real-time chat application using MERN stack with Socket.IO",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "chat",
    "mern",
    "socket.io",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "mysql2": "^3.14.3"
  }
}
